// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Message {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
  read      Boolean  @default(false)
}

model Setting {
  key   String @id
  value String
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
}

model SecurityEvent {
  id        String   @id @default(cuid())
  type      String
  ip        String
  detail    String   @default("")
  userAgent String   @default("")
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([type])
  @@index([ip])
}

model PageView {
  id        String   @id @default(cuid())
  path      String
  referrer  String   @default("")
  browser   String   @default("")
  os        String   @default("")
  device    String   @default("")
  ipHash    String
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([path])
}
